<LoginScreen>:
        name: "login"
        MDFloatLayout:              
                Image:
                        source: "images/background_3.png"
                        anim_delay: 0.05
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: 1, 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                
                Label:
                        text: "ESSENTIALS  \nStay on top of your favorite hobbies!"
                        halign: "center"
                        valign: "top"
                        size_hint: .8, None
                        pos_hint: {"top": 0.9, "center_x": 0.5}
                        font_name: "fonts/pixelify_bold.ttf"
                        font_size: "25sp"
                        color: 0, 0, 0, 1

        
        MDTextField:
                id: username_field
                hint_text: "E-mail"
                icon_left: "account-circle"
                icon_left_color_focus: 0.5, 0.8, 0.5, 1
                size_hint: .35, None
                height: "48dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.6}
                font_name: "fonts/pixelify_bold.ttf"
                theme_text_color: "Custom"
                text_color_focus: 0, 0, 0, 1
                text_color: 0, 0, 0, 1
                hint_text_color_focus: 0.5, 0.5, 0.5, 1
                hint_text_color_normal: 0.7, 0.7, 0.7, 1
                line_color_focus: 0.5, 0.8, 0.5, 1
                line_color_normal: 0.7, 0.7, 0.7, 1
                cursor_color: 0.5, 0.8, 0.5, 1
                on_text: app.limit_field_length(self, self.text, 100)
                
                

        MDTextField:
                id: password_field
                hint_text: "Password"
                icon_left: "lock"
                icon_left_color_focus: 0.5, 0.8, 0.5, 1
                password: True
                size_hint: .35, None
                height: "48dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                font_name: "fonts/pixelify_bold.ttf"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                text_color_focus: 0, 0, 0, 1
                hint_text_color_focus: 0.5, 0.5, 0.5, 1
                hint_text_color_normal: 0.7, 0.7, 0.7, 1
                line_color_focus: 0.5, 0.8, 0.5, 1
                line_color_normal: 0.7, 0.7, 0.7, 1
                cursor_color: 0.5, 0.8, 0.5, 1
                on_text: app.limit_field_length(self, self.text, 64)
                
            

        MDRaisedButton:
                id: login_button
                text: "Login"
                size_hint: .2, None
                height: "48dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.35}
                font_name: "fonts/pixelify_bold.ttf"
                md_bg_color: 0.5, 0.8, 0.5, 1
                on_release: app.login_authentification()
                
        MDFlatButton:
                id: forgot_password_id
                text: "Forgot ID/Password?"
                pos_hint: {"center_x": 0.5, "center_y": 0.25}
                font_name: "fonts/pixelify_bold.ttf"
                font_size: "14sp"
                theme_text_color: "Custom"
                text_color: 0.5, 0.8, 0.5, 1
                ripple_scale: 0
                elevation: 0
            
        MDFlatButton:
                id: new_account
                text: "Create new account!"
                pos_hint: {"center_x": 0.5, "center_y": 0.20}
                font_name: "fonts/pixelify_bold.ttf"
                font_size: "14sp"
                theme_text_color: "Custom"
                text_color: 0.5, 0.8, 0.5, 1
                ripple_scale: 0
                elevation: 0                
                on_release: app.root.current = "signup"
